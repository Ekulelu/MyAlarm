<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ekulelu.myalarm.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             >
             <ImageButton
                 android:id="@+id/btn_add_alarm"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:src="@mipmap/add_white2"
                 android:layout_alignParentStart="true"
                 android:contentDescription="@string/add_alarm"
                 android:background="@color/transparent"
                 android:layout_centerVertical="true"
                 android:scaleType="centerInside"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/title"
                 android:textSize="30sp"
                 android:textColor="@color/white"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"/>
             <ImageButton
                 android:id="@+id/btn_delete_alarm"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:src="@mipmap/trash_red"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginEnd="15dp"
                 android:contentDescription="@string/add_alarm"
                 android:background="@color/transparent"
                 android:layout_marginTop="10dp"
                 android:scaleType="centerInside"/>
         </RelativeLayout>

    </android.support.v7.widget.Toolbar>






</RelativeLayout>
